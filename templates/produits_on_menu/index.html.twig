{% extends 'base.html.twig' %}

{% block title %}Produits du Menu{% endblock %}

{% block body %}
<h1>Produits du Menu</h1>

<table class="table">
    <thead>
        <tr>
            <th>Menu</th>
            <th>Produits</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody class="table-light">
        {% for produits_on_menu in produits_on_menus %}
        <tr>
            <td>{{ produits_on_menu.Menu.libelle }}</td>
            <td>{{ produits_on_menu.produit.produitLibelle }}</td>
            <td>
                <a class="btn btn-primary"
                    href="{{ path('produits_on_menu_show', {'id': produits_on_menu.id}) }}">Afficher</a>
                <a class="btn btn-primary"
                    href="{{ path('produits_on_menu_edit', {'id': produits_on_menu.id}) }}">Modifier</a>
                {{ include('produits_on_menu/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="2">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('produits_on_menu_new') }}">Create new</a>
{% endblock %}