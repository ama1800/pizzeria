{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<h1>Les Categories</h1>


<a href="{{ path('categorie_new') }}">Create new</a>
<table class="table table-hover">
    <thead class="table-active">
        <tr>
            <th>Categorie</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody class="table-light">
        {% for categorie in categories %}
        <tr>
            <td><a href="{{ path('categorie_show', {'id': categorie.id}) }}">{{ categorie.categorieLibelle }}</a>
            </td>
            <td>
                <a href="{{ path('categorie_show', {'id': categorie.id}) }}">show</a>
                <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
                {{ include('categorie/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}