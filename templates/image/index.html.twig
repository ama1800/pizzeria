{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
<h1 class="produits">Images</h1>
<a href="{{ path('image_new') }}">Ajouter Image</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Url</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for image in images %}
        <tr>
            <td>{{ image.produit.produitLibelle }}</td>
            <td>
                <div>
                    <img class="img-fluid" src="{{ asset('uploads/' ~  image.url) }}" alt="coca">
                </div><br>
            </td>
            <td>
                <div style="display: flex;">
                    <a class="breadcrumb-item" href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
                    {{ include('image/_delete_form.html.twig') }}
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}