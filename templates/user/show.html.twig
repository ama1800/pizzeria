{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h1 class="text-warning">{{ user.civilite ? 'Monsieur' : 'Madame' }} {{ user.nom }} {{ user.prenom }}</h1>
<div class="card border-info mb-3" style="max-width: 80%; margin: auto; padding: 2em;">
  <div style="max-width: 100%;">
    <div class="card-header text-danger">N°: {{ user.id }}<br>
    </div>
    <div class="card-body text-success">
      Tel. <a href="tel:{{ user.telephone }}">{{ user.telephone }}</a><br>
      <h6 class="card-title">La cagnotte :
        {{ user.cagnotte ? user.cagnotte : 0 }}€</h6>
      <p class="card-text">ADRESSE : <br>{{ user.adresse }}<br> {{ user.cp }}<br> {{ user.ville }}</p>
      <h6>
        <a href="mailto:{{user.email}}">{{user.email}}</a>
      </h6>
    </div>
  </div>
  <div>
    <img width="200" height="250" class="img-fluid" src="{{ asset('uploads/' ~  user.photo) }}" alt="{{ user.nom}}">
  </div>
  <div style="display: flex;">
    <div>
      <a href="{{ path('user_index') }}" class="btn btn-outline-primary">List Users</a>
    </div>
    <div>
      <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-primary">Modifier</a>
    </div>
    <div>
      {{ include('user/_delete_form.html.twig') }}</div>
  </div>
</div>
</div><br><br>
{% endblock %}